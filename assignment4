#include <stdio.h>

int main(){
	int i=1;
	char in;

	while(i){
		printf("\nEnter an operation code: ");
		scanf("%c",&in);
	
		switch(in){
			case 'Q':
			case 'q':
				i=0;
				break;
			case 'C':
			case 'c':

				break;
			case 'S':
			case 's':

				break;
 			case 'R':
			case 'r':

				break;
			default:
				printf("\nError: Invalid Operation Code");

		}
	}
	return 0;
}
